<h1>Edit Article</h1>

<%= form_with(model: @product, local: true) do |form| %>

  <p>
    <%= form.label :sku %><br>
    <%= form.text_field :sku %>
  </p>

  <p>
    <%= form.label :color %><br>
    <%= form.text_field :color %>
  </p>

  <p>
    <%= form.label :image %><br>
    <%= form.file_field :image %>
  </p>

  <p>
    <%= form.submit %>
  </p>

<% end %>

<%= link_to 'Back', products_path %>